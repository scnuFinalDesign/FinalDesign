<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330px"
    android:layout_height="380px"
    android:layout_marginTop="20px"
    android:layout_marginBottom="20px"
    android:orientation="vertical"
    android:padding="5px"
    >

    <FrameLayout
        android:layout_width="330px"
        android:layout_height="330px"
        >

        <ImageView
            android:id="@+id/photo_group_adapter_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginRight="5px"
            android:layout_marginTop="5px"
            android:paddingBottom="30dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="18dip"
            android:background="@mipmap/photo_bg"/>

        <TextView
            android:id="@+id/photo_group_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20px"
            android:background="@mipmap/photo_number_bg"
            android:gravity="center"/>
        <CheckBox
            android:layout_width="50px"
            android:layout_height="50px"
            android:id="@+id/photo_group_adapter_checkbox"
            android:layout_gravity="right"
            android:layout_marginRight="5px"
            android:background="@drawable/radio_button_style"
            android:button="@null"/>
    </FrameLayout>

    <TextView
        android:id="@+id/photo_group_adapter_path"
        android:layout_width="330px"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp"/>
</LinearLayout>