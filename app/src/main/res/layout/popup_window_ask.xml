<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TextView
        android:id="@+id/pop_ask_title"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_margin="30px"
        android:gravity="center"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/pop_ask_cancel"
        android:layout_width="330px"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pop_ask_title"
        android:background="@drawable/bg_new_sure_btn"
        android:text="@string/cancel"
        android:textColor="@color/gray"/>

    <Button
        android:id="@+id/pop_ask_sure"
        android:layout_width="330px"
        android:layout_height="100px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pop_ask_title"
        android:background="@drawable/bg_new_sure_btn"
        android:text="@string/sure"
        android:textColor="@color/sure_text_color"/>
</RelativeLayout>