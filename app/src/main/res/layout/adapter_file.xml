<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px">

    <CheckBox
        android:id="@+id/file_adapter_checkBox"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/radio_button_style"
        android:button="@null"
       />

    <ImageView
        android:id="@+id/file_adapter_image"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:background="@drawable/bg_ic_file"
        android:layout_alignParentLeft="true"
       />

    <TextView
        android:id="@+id/file_adapter_size"
        android:layout_width="200px"
        android:layout_height="40px"
        android:layout_alignStart="@+id/file_adapter_name"
        android:layout_marginTop="50px"
        android:layout_alignLeft="@+id/file_adapter_name"/>

    <TextView
        android:id="@+id/file_adapter_modify"
        android:layout_width="240px"
        android:layout_height="40px"
        android:layout_alignBaseline="@+id/file_adapter_size"
        android:layout_alignBottom="@+id/file_adapter_size"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/file_adapter_checkBox"
        android:textSize="12sp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/file_adapter_checkBox"/>

    <TextView
        android:id="@+id/file_adapter_name"
        android:layout_width="400px"
        android:layout_height="40px"
        android:layout_alignTop="@+id/file_adapter_image"
        android:layout_centerHorizontal="true"
        android:ellipsize="middle"
        android:singleLine="true"/>
</RelativeLayout>